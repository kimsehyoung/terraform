apiVersion: apps/v1
kind: Deployment
metadata:
  name: test
spec:
  replicas: ${replicas}
  selector:
    matchLabels:
      app: test
  template:
    metadata:
      labels:
        app: test
      annotations:
        linkerd.io/inject: enabled
    spec:
      terminationGracePeriodSeconds: 0
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
              - matchExpressions:
                - key: ${label_key}
                  operator: In
                  values:
                  - ${label_value}
      containers:
        - name: test
          image: public.ecr.aws/eks-distro/kubernetes/pause:3.7
          resources:
            requests:
              cpu: 1